extends layout

block content
  h1 Galaxy Detail

  // Check if the galaxy data exists
  if (toShow == null)
    h2 No instance found
  else
    - let galaxyid = toShow._id
    - let name = toShow.name
    - let galaxiesyear = toShow.year
    - let galaxiesinventor = toShow.inventor
    - let galaxydistance = toShow.distance
    - let galaxystype = toShow.type

    // Display Galaxy details in a well-structured layout
    .container
      .row.mb-3
        .col-md-12
          .card
            .card-body
              h5.card-title= name
              p Year: #{galaxiesyear}
              p Inventor: #{galaxiesinventor}
              p Distance: #{galaxydistance} light-years
              p Type: #{galaxystype}
              
    // Display the Galaxy ID in a styled row for clarity
    .container
      .row.mb-3
        .col-md-12
          .font-weight-bold.mb-1 Galaxy ID:
          div #{galaxyid}

    // Go Back button
    .text-center.mt-4
      button.btn.btn-secondary(onclick="goBack()") Go Back

  script.
    function goBack() {
      window.location.href = "/galaxies";  // Redirect to the galaxies list page
    }
